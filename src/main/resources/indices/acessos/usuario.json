{
  "settings": {
    "analysis": {
      "analyzer": {
        "keyword_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [ "lowercase" ]
        }
      }
    }
  },
  "mappings": {
    "Usuario": {
      "dynamic": false,
      "properties": {
        "id": {
          "properties": {
            "sequencial": {
              "type": "long",
          	  "index": "not_analyzed",
          	  "include_in_all": false
            }
          }
        },      	
        "pessoa": {
          "properties": {
            "id": {
	          "properties": {
	            "sequencial": {
	              "type": "long",
	          	  "index": "not_analyzed",
	          	  "include_in_all": false
	          	}
	          }
            },
	        "nome": {
	          "type": "string",
	          "analyzer": "keyword_analyzer"
	        }
          }
        },
        "login": {
          "type": "string",
          "index": "not_analyzed"
        },
        "lotacao": {
          "properties": {
            "codigo": {
              "type": "long",
          	  "index": "not_analyzed",
          	  "include_in_all": false
            },
            "nome": {
              "type": "string",
          	  "analyzer": "keyword_analyzer"
            },
            "sigla": {
              "type": "string",
          	  "analyzer": "keyword_analyzer"
            }            
          }
        }        
      }
    }
  }
}