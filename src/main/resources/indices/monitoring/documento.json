{
    "template": "monitoring-documento-*",
    "mappings": {
        "DocumentoOperation": {
            "_ttl" : { "enabled" : true, "default": "12w" },
            "properties": {
                "id": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "operation": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "persisterClass": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "size": {
                    "type": "long",
                    "index": "not_analyzed"
                },
                "durationInMillis": {
                    "type": "long",
                    "index": "not_analyzed"
                },
                "errorOcurred": {
                    "type": "boolean",
                    "index": "not_analyzed"
                }
            }
        }
    }
}