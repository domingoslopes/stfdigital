{
  "settings": {
    "analysis": {
      "analyzer": {
        "keyword_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [ "lowercase" ]
        }
      }
    }
  },
  "mappings": {
    "Notificacao": {
      "dynamic": false,
      "properties": {
        "id": {
          "properties": {
            "uuid": {
              "type": "string",
          	  "index": "not_analyzed",
          	  "include_in_all": false
            }
          }
        },
        "tipoNotificacao": {
          "type": "string",
          "analyzer": "keyword_analyzer"
        },
        "mensagem": {
          "type": "string",
          "index": "no"
        },
        "dataCriacao": {
          "type": "date",
          "index": "not_analyzed"
        },
        "notificante": {
          "type": "string",
          "analyzer": "keyword_analyzer"
        },
        "lida": {
          "type": "boolean",
          "index": "not_analyzed"
        },
        "notificado": {
          "type": "string",
          "analyzer": "keyword_analyzer"
        }        
      }
    }
  }
}