// main header
header#header_main
  .header_main_content
    nav.uk-navbar
      // main sidebar switch
      a#sidebar_main_toggle.sSwitch.sSwitch_left(href='#')
        span.sSwitchIcon
      // secondary sidebar switch
      a#sidebar_secondary_toggle.sSwitch.sSwitch_right.sidebar_secondary_check(href='#')
        span.sSwitchIcon
      #menu_top.uk-float-left.uk-hidden-small
        .uk-button-dropdown(data-uk-dropdown="{mode:'click'}")
          a.top_menu_toggle(href='#')
            i.material-icons.md-24 &#xE8F0;
          .uk-dropdown.uk-dropdown-width-3
            .uk-grid.uk-dropdown-grid(data-uk-grid-margin='')
              .uk-width-2-3
                .uk-grid.uk-grid-width-medium-1-3.uk-margin-top.uk-margin-bottom.uk-text-center(data-uk-grid-margin='')
                  a(href='page_mailbox.html')
                    i.material-icons.md-36 &#xE158;
                    span.uk-text-muted.uk-display-block Supremo
                  a(href='page_invoices.html')
                    i.material-icons.md-36 &#xE53E;
                    span.uk-text-muted.uk-display-block Consulta
                  a(href='page_chat.html')
                    i.material-icons.md-36.md-color-red-600 &#xE0B9;
                    span.uk-text-muted.uk-display-block eGab
                  a(href='page_scrum_board.html')
                    i.material-icons.md-36 &#xE85C;
                    span.uk-text-muted.uk-display-block eSTF Decisão
                  a(href='page_snippets.html')
                    i.material-icons.md-36 &#xE86F;
                    span.uk-text-muted.uk-display-block eSessões
              .uk-width-1-3
                ul.uk-nav.uk-nav-dropdown.uk-panel
                  li.uk-nav-header Mais usados
                  li
                    a(href='components_accordion.html') Visualizador de Peças
                  li
                    a(href='components_buttons.html') eSessões
                  li
                    a(href='components_notifications.html') eGab
                  li
                    a(href='components_sortable.html') eSTF Decisão
      .uk-navbar-flip
        ul.uk-navbar-nav.user_actions
          li
            a#main_search_btn.user_action_icon(href='#')
              i.material-icons.md-24.md-light &#xE8B6;
          li(data-uk-dropdown="{mode:'click'}")
            include ./header-notifications.jade
          li(data-uk-dropdown="{mode:'click'}")
            a.user_action_image(href='#')
              img.md-user-image(src='assets/img/avatars/leandro.png', alt='')
            .uk-dropdown.uk-dropdown-small.uk-dropdown-flip 
              ul.uk-nav.js-uk-prevent
                li
                  a(href='page_user_profile.html') Meu perfil
                li
                  a(href='page_settings.html') Configurações
                li
                  a(href='login.html') Sair

  .header_main_search_form
    i.md-icon.header_main_search_close.material-icons &#xE5CD;
    form.uk-form
      input.header_main_search_input(type='text')
      button.header_main_search_btn.uk-button-link
        i.md-icon.material-icons &#xE8B6;
// main header end